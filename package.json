{
	"name": "ocmt",
	"version": "1.0.1",
	"description": "AI-powered git commit message generator using opencode.ai",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"opencommit": "./dist/cli.js",
		"ocmt": "./dist/cli.js",
		"oc": "./dist/cli.js"
	},
	"scripts": {
		"start": "node dist/cli.js",
		"dev": "bun --watch src/cli.ts",
		"build": "bun build src/cli.ts --outdir=dist --target=node --format=esm && bun build src/index.ts --outdir=dist --target=node --format=esm",
		"typecheck": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepublishOnly": "bun run build"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"git",
		"commit",
		"ai",
		"opencode",
		"cli",
		"changelog",
		"conventional-commits",
		"opencommit"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sst/ocmt.git"
	},
	"bugs": {
		"url": "https://github.com/sst/ocmt/issues"
	},
	"homepage": "https://github.com/sst/ocmt#readme",
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@opencode-ai/sdk": "^1.0.155",
		"commander": "^12.1.0",
		"critique": "^0.1.8",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "latest",
		"typescript": "^5.7.2"
	}
}
